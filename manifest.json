{
    "manifest_version": 2,
    "name" : "CoinPrice",
    "description" : "check price",
    "version" : "1.0.0",
    "browser_action": {
      "default_title": "CoinPrice"
    },
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent":false
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content_script.js"]
      }
    ],
    "permissions": [
       "tabs"
    ]
 }
 